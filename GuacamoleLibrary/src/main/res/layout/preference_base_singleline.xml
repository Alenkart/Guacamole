<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="0dp">

    <TextView
            android:id="@+id/simplePreferenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/simplePreferenceLeftIcon"
            app:layout_constraintStart_toEndOf="@+id/simplePreferenceLeftIcon"
            app:layout_constraintTop_toTopOf="@+id/simplePreferenceLeftIcon"
            android:textColor="@color/colorAvantuDarkBlue"
            tools:text="@string/lorem_ipsum"/>

    <TextView
            android:id="@+id/simplePreferenceSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="end"
            android:textAlignment="viewEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/simplePreferenceTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/simplePreferenceRightIcon"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" tools:text="@string/lorem_ipsum_comment"/>


    <ImageView
            android:id="@+id/simplePreferenceLeftIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" tools:src="@tools:sample/avatars"/>
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/simplePreferenceRightIcon"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>